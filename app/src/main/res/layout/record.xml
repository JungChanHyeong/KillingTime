<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ktmain2"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/d" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 맞춘 갯수 : "
            android:textColor="#000000"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/totalhit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#000000"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 푼 문제수 : "
            android:textColor="#000000"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/totalsolve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="#000000"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 정답률 :"
            android:textColor="#000000"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/totalpercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="#000000"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textColor="#000000"
            android:textSize="10pt" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="정답수"
            android:textColor="#000000"
            android:textSize="10pt" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="정답률      "
            android:textColor="#000000"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/day1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="12- 14"
            android:textColor="#000000"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/hit1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="1개"
            android:textColor="#000000"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/rate1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="10%"
            android:textColor="#000000"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/day2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="12- 14"
            android:textColor="#000000"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/hit2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="1개"
            android:textColor="#000000"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/rate2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="10%"
            android:textColor="#000000"
            android:textSize="10pt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/day3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="12- 14"
            android:textColor="#000000"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/hit3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="1개"
            android:textColor="#000000"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/rate3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="10%"
            android:textColor="#000000"
            android:textSize="10pt" />
    </LinearLayout>

</LinearLayout>

